# Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment (development, staging, production)
EXPO_PUBLIC_ENV=development

# API Configuration
EXPO_PUBLIC_API_URL=https://api.amedspor.com/api

# SignalR Hub URLs
EXPO_PUBLIC_CHAT_HUB_URL=https://api.amedspor.com/chathub
EXPO_PUBLIC_POLL_HUB_URL=https://api.amedspor.com/pollhub
EXPO_PUBLIC_GOAL_HUB_URL=https://api.amedspor.com/goalhub

# Media Upload
EXPO_PUBLIC_MEDIA_UPLOAD_URL=https://api.amedspor.com/api/media/upload

# Error Tracking (Sentry)
EXPO_PUBLIC_SENTRY_DSN=

# Analytics
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=

# Ad Unit IDs (AdMob)
EXPO_PUBLIC_ADMOB_APP_ID=
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID=
EXPO_PUBLIC_ADMOB_REWARDED_ID=
EXPO_PUBLIC_ADMOB_NATIVE_ID=

# Feature Flags
EXPO_PUBLIC_ENABLE_CHAT=true
EXPO_PUBLIC_ENABLE_POLLS=true
EXPO_PUBLIC_ENABLE_ADS=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Debug Mode
EXPO_PUBLIC_DEBUG=false
EXPO_PUBLIC_VERBOSE_LOGGING=false
